# and condition

# truth table for AND
# and
# True  and  True  ==> True
# False and  True  ==> False
# True  and  False ==> False
# False and  False ==> False



a = 100
b = 200

if a == 100 and b == 200:
    print("Both values are correct")

# using else

if a == 100 and b > 200:
    print("Both values are correct")
else:
    print("One value is not correct")

#using elif

if a == 100 and b > 200:
    print("Both values are correct")
elif a == 100 and b >= 200:
    print("inside elif")
else:
    print("One value is not correct")




#or

# True  or  True  ==> True
# False or  True  ==> True
# True  or  False ==> True
# False or  False ==> False


if a == 100 or  b > 200:
    print("Either value is coorect")
elif a == 100 or b >= 200:
    print("inside elif")
else:
    print("Both values are incorrect")



