# if ...else

# if the condition is false we need some output to show


if age > 18: # this has to be true
    print("You can vote")
else:
    print("You can't vote") # this is automatic indentation



#multiple condition using elif
if age <18 : # this has to be true
    print("You can't vote")

elif age > 60:
    print("Sr. citizen")
else:
    print("You can't vote") # this is automatic indentation


#eg:

sal = int(input("Enter yor salary :"))
if sal > 1000:
    print(" cond1 ")
elif sal > 900:
    print(" cond2 ")
elif sal > 500:
    print(" cond3 ")
elif sal > 300:
    print(" cond4 ")
else:
    print("Job switvh")


# Nested condiiton
sal = int(input("Enter yor salary :"))
if sal > 1000:
    print(" cond1 ")
    if sal > 2000:
       print(" cond1+1 ")
       if True: #truthy values
            print("ENd of execution here")
    elif sal > 3000:
        print(" cond1+elif ")
    elif sal > 4000:
        print("End of nested conditio")
    else:
        print("Too rich")
elif sal > 900:
    print(" cond2 ")
elif sal > 500:
    print(" cond3 ")
elif sal > 300:
    print(" cond4 ")
else:
    print("Job switvh")


# truthy values

if True: #this is always true
    print("True")
else: #code will never reach this
    print("False")
    
    
